#include <dt-bindings/zmk/matrix_transform.h>
#include <physical_layouts.dtsi>


&xiao_spi {
	status = "okay";
	cs-gpios = <&xiao_d 9 GPIO_ACTIVE_LOW>;
	shifter: 595@0 {
		compatible = "zmk,gpio-595";
		status = "okay";
		gpio-controller;
		spi-max-frequency = <200000>;
		reg = <0>;
		#gpio-cells = <2>;
		ngpios = <8>;
	};
};

/ {
    chosen {
        zmk,kscan = &kscan;
        zmk,matrix_transform = &transform;
    };

    kscan: kscan_0 {
        compatible = "zmk,kscan-gpio-matrix";
        label = "deafult_kscan";
        diode-direction = "row2col";

        row-gpios = <&xiao_d 8 GPIO_ACTIVE_HIGH>,
					<&xiao_d 6 GPIO_ACTIVE_HIGH>,
					<&shifter 1 GPIO_ACTIVE_HIGH>,
					<&shifter 2 GPIO_ACTIVE_HIGH>,
					<&shifter 3 GPIO_ACTIVE_HIGH>,
					<&shifter 4 GPIO_ACTIVE_HIGH>,
					<&shifter 5 GPIO_ACTIVE_HIGH>,
					<&shifter 6 GPIO_ACTIVE_HIGH>,
					<&shifter 7 GPIO_ACTIVE_HIGH>,
					<&shifter 0 GPIO_ACTIVE_HIGH>;


        col-gpios = <&xiao_d 0 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
					, <&xiao_d 1 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
					, <&xiao_d 2 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
					, <&xiao_d 3 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
					, <&xiao_d 4 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>
					, <&xiao_d 5 (GPIO_ACTIVE_HIGH | GPIO_PULL_DOWN)>;
    };

    transform: matrix_transform {
        compatible = "zmk,matrix-transform";
        rows = <10>;
        columns = <6>;

        map = <
                RC(0, 0) RC(0, 1) RC(0, 2) RC(0, 3) RC(0, 4) RC(0, 5) RC(1, 0) RC(1, 1) RC(1, 2) RC(1, 3) RC(1, 4) RC(1, 5)                
				RC(2, 0) RC(2, 1) RC(2, 2) RC(2, 3) RC(2, 4) RC(2, 5) RC(3, 0) RC(3, 1) RC(3, 2) RC(3, 3) RC(3, 4) RC(3, 5)                
				RC(4, 0) RC(4, 1) RC(4, 2) RC(4, 3) RC(4, 4) RC(4, 5) RC(5, 0) RC(5, 1) RC(5, 2) RC(5, 3) RC(5, 4) RC(5, 5)                
				RC(6, 0) RC(6, 1) RC(6, 2) RC(6, 3) RC(6, 4) RC(6, 5) RC(7, 0) RC(7, 1) RC(7, 2) RC(7, 3) RC(7, 4) RC(7, 5)                
				RC(8, 0) RC(8, 1) RC(8, 2) RC(8, 3) RC(8, 4) RC(8, 5) RC(9, 0) RC(9, 1) RC(9, 2) RC(9, 3) RC(9, 4) RC(9, 5)
        >;
    };
};